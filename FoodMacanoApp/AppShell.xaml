<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:FoodMacanoApp.Views.Login"
       xmlns:inicio="clr-namespace:FoodMacanoApp.Views.Inicio"
       xmlns:carrito="clr-namespace:FoodMacanoApp.Views.Carrito"
       x:Class="FoodMacanoApp.AppShell"
       Shell.FlyoutBehavior="Disabled"
       Shell.NavBarIsVisible="False"
       NavigationPage.HasNavigationBar="False">

    <ShellContent
        ContentTemplate="{DataTemplate views:LoginView}"
        Route="Login"/>

    <ShellContent
        ContentTemplate="{DataTemplate inicio:InicioView}"
        Route="InicioView"/>
    
    <ShellContent
    ContentTemplate="{DataTemplate carrito:CarritoView}"
    Route="CarritoView"/>

</Shell>