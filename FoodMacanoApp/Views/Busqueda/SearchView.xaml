<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodMacanoApp.Views.Busqueda.SearchView"
             NavigationPage.HasNavigationBar="False"
             Title="Buscar Productos">

    <Grid RowDefinitions="Auto,Auto,*,Auto">
        <!-- Barra superior -->
        <Grid Grid.Row="0" Padding="25,5" ColumnDefinitions="Auto,*,Auto">
            <Button Grid.Column="0" 
                    Text="&#xf060;" 
                    FontFamily="FontAwesomeSolid" 
                    BackgroundColor="Transparent" 
                    TextColor="Gray" 
                    FontSize="18"
                    Clicked="OnVolverClicked"/>

            <Label Grid.Column="1" 
                   Text="Buscar Productos" 
                   TextColor="Orange" 
                   FontSize="18" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Center"
                   Margin="0,0,40,0"/>
        </Grid>

        <!-- Buscador -->
        <Frame Grid.Row="1" 
               CornerRadius="20" 
               Padding="15,5" 
               BorderColor="Gray" 
               Margin="20,10">
            <HorizontalStackLayout Spacing="10">
                <Label Text="&#xf002;" 
                       FontFamily="FontAwesomeSolid" 
                       FontSize="15" 
                       TextColor="White" 
                       VerticalOptions="Center"/>
                <Entry Placeholder="Buscar Comida..." 
                       PlaceholderColor="Gray" 
                       TextColor="White"
                       HorizontalOptions="FillAndExpand"
                       TextChanged="OnBusquedaTextChanged"/>
            </HorizontalStackLayout>
        </Frame>

        <!-- Resultados de bÃºsqueda -->
        <CollectionView Grid.Row="2" 
                        ItemsSource="{Binding ProductosFiltrados}" 
                        ItemsLayout="VerticalGrid, 2"
                        Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid RowSpacing="0" Margin="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Frame Grid.Row="1" 
                               BackgroundColor="#2A2A2A" 
                               CornerRadius="30" 
                               Padding="15,60,10,10"
                               Margin="0,40,0,0"
                               HeightRequest="180">
                            <VerticalStackLayout Spacing="5">
                                <Label Text="{Binding Nombre}" 
                                       TextColor="White" 
                                       FontSize="14"/>
                                <Label Text="{Binding DescripcionProducto.DescripcionCorta}" 
                                       TextColor="Gray" 
                                       FontSize="12"/>
                                <Label Text="{Binding Precio, StringFormat='${0}'}" 
                                       TextColor="Orange" 
                                       FontSize="14"/>
                            </VerticalStackLayout>
                        </Frame>
                        <!-- Imagen sobrepuesta -->
                        <Image Grid.Row="0" 
                               Grid.RowSpan="2" 
                               Source="{Binding ImagenUrl}" 
                               Aspect="AspectFit" 
                               HeightRequest="100" 
                               VerticalOptions="Start"/>
                        <Grid Grid.Row="1">
                            <Button HeightRequest="40" 
                                    WidthRequest="46"
                                    CornerRadius="20"
                                    BackgroundColor="LightGray"
                                    Margin="10,0,0,10"
                                    VerticalOptions="End"
                                    FontFamily="FontAwesomeSolid" 
                                    Text="&#xf2e7;"
                                    Clicked="OnInformacionClicked"/>
                            <Button HeightRequest="40" 
                                    WidthRequest="46"
                                    CornerRadius="20"
                                    BackgroundColor="Orange"
                                    Margin="0,0,10,10"
                                    HorizontalOptions="End"
                                    VerticalOptions="End"
                                    FontFamily="FontAwesomeSolid" 
                                    Text="&#xf07a;"
                                    Clicked="OnAgregarAlCarritoClicked"/>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.EmptyView>
                <Label Text="No se encontraron productos" 
                       TextColor="White" 
                       HorizontalOptions="Center" 
                       VerticalOptions="Center"/>
            </CollectionView.EmptyView>
        </CollectionView>
    </Grid>
</ContentPage>